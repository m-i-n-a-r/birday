<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="@dimen/dialog_actions_padding"
    android:paddingLeft="@dimen/dialog_actions_padding"
    android:paddingRight="@dimen/dialog_actions_padding">

    <Button
        android:id="@+id/editButton"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_event"
        android:textColor="?colorAccent"
        android:tint="?colorAccent"
        android:paddingTop="@dimen/in_row_button_padding"
        android:paddingBottom="@dimen/in_row_button_padding"
        android:layout_weight="0.5"
        android:contentDescription="@string/event_actions"
        app:icon="@drawable/ic_edit_24dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        app:rippleColor="?colorAccent" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_event"
        android:textColor="?colorAccent"
        android:tint="?colorAccent"
        android:paddingTop="@dimen/in_row_button_padding"
        android:paddingBottom="@dimen/in_row_button_padding"
        android:layout_weight="0.5"
        android:contentDescription="@string/event_actions"
        app:icon="@drawable/ic_delete_black_24dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        app:rippleColor="?colorAccent" />

</LinearLayout>