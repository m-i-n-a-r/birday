<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet />
    </Transition>

    <!-- Don't involve in the motion the elements whose visibility could change -->
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/detailsEventNameImage">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsEventImage">
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsEventImageBackground">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsBirthDate">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsBirthDateValue">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsNextAge">
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsNextAgeValue">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsNextAgeYears">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsZodiacSign">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsZodiacSignValue">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsChineseSign">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsChineseSignValue">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsCountdownShimmer">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/detailsEventImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/event_details"
            android:padding="@dimen/in_row_padding"
            android:rotationY="360"
            app:layout_constraintBottom_toBottomOf="@id/detailsEventImageBackground"
            app:layout_constraintDimensionRatio="1.0"
            app:layout_constraintEnd_toEndOf="@id/detailsEventImageBackground"
            app:layout_constraintStart_toStartOf="@id/detailsEventImageBackground"
            app:layout_constraintTop_toTopOf="@id/detailsEventImageBackground"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            app:transitionEasing="decelerate" />
        <Constraint android:id="@id/detailsEventImageBackground">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsNextAge">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsChineseSignValue">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsZodiacSignValue">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsNextAgeValue">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsNextAge">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsBirthDate">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsZodiacSign">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsChineseSign">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsBirthDateValue">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/detailsNextAgeYears">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@id/detailsCountdownShimmer">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>
</MotionScene>